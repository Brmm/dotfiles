#!/usr/bin/env bash

export EDITOR='nano';

# history stuff
export HISTCONTROL=erasedups # Erase duplicates in history
export HISTSIZE=10000000000
export HISTFILESIZE=${HISTSIZE} # Lots o' history.
export HISTIGNORE="ls:cd:history:nano:tor:exit:mkdir:mv:cp"

export GREP_OPTIONS='--color=auto' # Always enable colored `grep` output.

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

export CLICOLOR=1
export LSCOLORS=GxHxgxfxHxegedabagaced
export LS_COLORS='di=1;36:ln=1;37:so=36:pi=35:ex=1;37:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=34;43'

export PROMPT_COMMAND='history -a;' # always save history
